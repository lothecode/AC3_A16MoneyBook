<div class="col-md-10 mx-auto mt-4">
  <div class="row text-center my-3">

    <h2 class="col-md-8">您修改後的支出紀錄</h2>
  </div>
  <div class="form-group row">
    <label for="name" class="col-md-3 col-form-label text-center">名稱 : </label>
    <div class="col-md-8">
      <span>{{{record.name}}}</span>
    </div>
  </div>
  <div class="form-group row">
    <label for="date" class="col-md-3 col-form-label text-center">日期 : </label>
    <div class="col-md-8">
      <span>{{{record.date}}}</span>
    </div>
  </div>
  <div class="form-group row">
    <label for="select" class="col-md-3 col-form-label text-center">類別 : </label>
    <div class="col-md-8">
      <span>{{#ifCond record.category '===' 'life'}}<i class="fas fa-home"></i>{{/ifCond}}</span>
      <span>{{#ifCond record.category '===' 'travel'}}<i class="fas fa-shuttle-van"></i>{{/ifCond}}</span>
      <span>{{#ifCond record.category '===' 'happy'}}<i class="fas fa-grin-beam"></i>{{/ifCond}}</span>
      <span>{{#ifCond record.category '===' 'food'}}<i class="fas fa-utensils"></i>{{/ifCond}}</span>
      <span>{{#ifCond record.category '===' 'others'}}<i class="fas fa-pen"></i>{{/ifCond}}</span>

    </div>
  </div>
  <div class="form-group row">
    <label for="amount" class="col-md-3 col-form-label text-center">金額 : </label>
    <div class="col-md-8">
      <span>{{{record.amount}}}</span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8">
      <a href="/" class="btn btn-secondary">Back</a>
    </div>
  </div>
</div>